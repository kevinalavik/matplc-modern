%                    \hfill
%                 }
%              \makebox[\textwidth]{\small{\hfill {\em slide-\thepage}}}
%           }
   }

\def\myfoot
    {
       \parbox[b]{\textwidth}
          {
             \protect{\BrickRed{\rule{\textwidth}{0.5mm}}}
             \protect\\
             \makebox[\textwidth]
                {\footcolor{
                   \hfill
  		  \normalsize{\foottitle}
  		  \hfill\hfill
		\normalsize{\footdate}
		  \hfill\hfill \small{\em slide-\thepage}
                   \hfill
                }}
%              \makebox[\textwidth]{\small{\hfill {\em slide-\thepage}}}
          }
   }

